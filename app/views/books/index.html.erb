<h1>Listing books</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Professor</th>
    <th>Academic area</th>
    <th>Language</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= book.description %></td>
    <td><%= book.professor %></td>
    <td><%= book.academic_area %></td>
    <td><%= book.language %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

